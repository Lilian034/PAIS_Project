# ==================== Gemini API ====================
# 前往 https://aistudio.google.com/app/apikey 獲取
GEMINI_API_KEY=your_gemini_api_key_here

# ==================== 文檔路徑 ====================
DOCS_DIR=/app/documents

# ==================== Qdrant 向量資料庫 ====================
QDRANT_HOST=qdrant
QDRANT_PORT=6333
QDRANT_URL=http://qdrant:6333

# ==================== API 服務配置 ====================
API_HOST=0.0.0.0
API_PORT=8000

# ==================== 管理員密碼 ====================
# 用於知識庫管理
ADMIN_PASSWORD=admin123456

# 用於幕僚系統登入
STAFF_PASSWORD=admin123

# ==================== ElevenLabs 語音克隆 API (選填) ====================
# 前往 https://elevenlabs.io/app/settings/api-keys 獲取
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# 在 https://elevenlabs.io/app/voice-lab 創建語音克隆後取得 Voice ID
MAYOR_VOICE_ID=your_mayor_voice_id_here

# ==================== Runway 影片生成 API (選填) ====================
# 前往 https://app.runwayml.com/settings 獲取
RUNWAY_API_KEY=your_runway_api_key_here

# ==================== 系統設定 ====================
# 知識庫集合名稱
COLLECTION_NAME=pais_knowledge_base

# 日誌等級 (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO